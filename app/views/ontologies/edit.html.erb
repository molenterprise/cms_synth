<% provide(:title, 'Edit ontology') %>
<h1>Ontology</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@ontology) do |f| %>
    
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :prefix %>
      <%= f.text_field :prefix %>

      <%= f.label :address %>
      <%= f.text_field :address %>

      <%= f.submit "Save ontology", class: "btn btn-large btn-primary" %>
      
      <%= link_to "Cancel", ontologies_path, class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>